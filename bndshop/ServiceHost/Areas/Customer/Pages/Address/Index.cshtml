@page
@model ServiceHost.Areas.Customer.Pages.Address.IndexModel
@{
    Layout = "Shared/_Layout";
    ViewData["title"] = "مدیریت آدرس ها";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">لیست آدرس ها</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li>
                                <a asp-page="./Index">حساب کاربری</a>
                            </li>
                            <li class="active">آدرس ها</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div>
        <a href="./Create">آدرس جدید</a>
    </div>
</div>
<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <form method="post">
                            <div class="cart-table table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th class="pro-thumbnail">#</th>
                                            <th class="pro-thumbnail">استان</th>
                                            <th class="pro-title">شهر</th>
                                            <th class="pro-price">کد پستی</th>
                                            <th class="pro-quantity">آدرس</th>
                                           
                                            <th class="pro-remove">عملیات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Address)
                                        {
                                            <tr>
                                               
                                                <td class="pro-title">
                                                    <a>@item.Id</a>
                                                </td>
                                                <td class="pro-price">
                                                    <span>@item.ProvinceName</span>
                                                </td>
                                                <td class="pro-price">
                                                    <span>@item.CityName</span>
                                                </td>
                                                <td class="pro-subtotal">
                                                    <span>@item.PostalCode</span>
                                                </td>
                                                <td class="pro-subtotal">
                                                    <span>@item.Description</span>
                                                </td>
                                                
                                                <td class="pro-subtotal">
                                                    <a class="btn btn-warning pull-right m-rl-5" asp-page="./Edit" asp-route-id="@item.Id">
                                                        <i class="fa fa-edit"></i> ویرایش
                                                    </a>   
                                                    @if (item.IsRemoved)
                                                        {
                                                            <a asp-page="./Index" asp-page-handler="Restore" asp-route-id="@item.Id"
                                                               class="btn btn-success btn-custom waves-effect waves-light m-b-5">فعال سازی</a>
                                                        }
                                                        else
                                                        {
                                                            <a asp-page="./Index" asp-page-handler="Remove" asp-route-id="@item.Id"
                                                               class="btn btn-danger btn-custom waves-effect waves-light m-b-5">غیرفعال</a>
                                                        }
</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
