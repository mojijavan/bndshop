@model BlogManagement.Application.Contracts.ArticleCategory.ArticleCategoryViewModel
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش گروه مقاله: @Model.Name</h4>
</div>

<form asp-page="./Index" asp-page-handler="Delete"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="control-label">نام</label>
                <input type="text" class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="error"></span>
            </div>
           
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Picture" class="control-label">عکس</label>
                    <input type="file" class="form-control" asp-for="Picture">
                    <span asp-validation-for="Picture" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ShowOrder" class="control-label">ترتیب نمایش</label>
                    <input class="form-control" asp-for="ShowOrder">
                    <span asp-validation-for="ShowOrder" class="error"></span>
                </div>
            </div>
        </div>
      
        <input type="text" asp-for="Id" value="@Model.Id" />
    </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">حذف</button>
    </div>
</form>